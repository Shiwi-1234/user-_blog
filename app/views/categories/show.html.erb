<style>body{
  background-color: lightcyan;
}
</style>
<h1>All Article</h1>
<table>  
<table class="table table-striped">
  <table class="table align-middle">
    <tr>
        <b><th>Title</th></b>
        <th>Description</th>  
        <th>Date</th>
        <th>Day</th> 
    </tr>
<tbody>
<tr>
    <%  @articles.each do |article|%>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= article.Date %></td>
    <td><%= article.Day %></td>
    <td><%= article.published %></td>
    <td><%= link_to 'Show', article_path(article),class: "btn btn-primary" %></td>
      <td><%= link_to 'edit', edit_article_path(article),class: "btn btn-primary" %></td>
      <td><%= button_to 'Delete', article_path(article),method: :delete,data: { confirm:'Are you sure' },class: "btn btn-primary" %></td>
</tr>
<%end%>
</tbody>
</table>
<%= link_to "Back", controller: :welcome , class: "btn btn-secondary" %>

